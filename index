    <script>
        // Interactive functionality
        let calculationData = {
            emissions: 0,
            capex: 0,
            opex: 0,
            mineType: '',
            selectedTechnologies: []
        };
        
        function toggleCheckbox(id) {
            const checkbox = document.getElementById(id);
            checkbox.checked = !checkbox.checked;
            updateCalculations();
        }
        
        function toggleTechCheckbox(id) {
            const checkbox = document.getElementById(id);
            checkbox.checked = !checkbox.checked;
        }
        
        function updateCalculations() {
            // Get current values
            const emissions = parseFloat(document.getElementById('emissions').value) || 0;
            const capex = parseFloat(document.getElementById('capex').value) || 0;
            const opex = parseFloat(document.getElementById('opex').value) || 0;
            const mineType = document.getElementById('mineType').value;
            
            calculationData = { emissions, capex, opex, mineType };
            
            // Simple calculations for demonstration
            const carbonPrice = 25; // $25 per tCO2e
            const carbonCredits = Math.round(emissions * 0.8); // 80% abatement efficiency
            const annualRevenue = carbonCredits * carbonPrice;
            const payback = capex > 0 ? Math.round((capex / (annualRevenue - opex)) * 12) : 0;
            const roi = capex > 0 ? Math.round(((annualRevenue - opex) / capex) * 100) : 0;
            
            // Update display
            document.getElementById('annualRevenue').textContent = annualRevenue.toLocaleString();
            document.getElementById('carbonCredits').textContent = carbonCredits.toLocaleString();
            document.getElementById('paybackPeriod').textContent = payback > 0 ? payback : '-';
            document.getElementById('roiPercent').textContent = roi;
            
            // Update eligibility status based on emissions
            const statusElement = document.getElementById('eligibilityStatus');
            if (emissions > 1000) {
                statusElement.textContent = 'Eligible';
                statusElement.className = 'status-indicator status-eligible';
            } else if (emissions > 0) {
                statusElement.textContent = 'Under Review';
                statusElement.className = 'status-indicator status-pending';
            } else {
                statusElement.textContent = 'Insufficient Data';
                statusElement.className = 'status-indicator status-pending';
            }
        }
        
        function runScenarios() {
            const selectedTechs = [];
            const techIds = ['tech-flaring', 'tech-power', 'tech-vam', 'tech-drainage'];
            const techNames = ['Flaring', 'Power Generation', 'VAM', 'Pre-Drainage'];
            
            techIds.forEach((id, index) => {
                if (document.getElementById(id).checked) {
                    selectedTechs.push(techNames[index]);
                }
            });
            
            const resultsDiv = document.getElementById('scenarioResults');
            const outputDiv = document.getElementById('scenarioOutput');
            
            if (selectedTechs.length > 0) {
                resultsDiv.style.display = 'block';
                let output = `Comparing ${selectedTechs.join(', ')}:<br>`;
                selectedTechs.forEach((tech, index) => {
                    const efficiency = [65, 85, 45, 75][techNames.indexOf(tech)];
                    const cost = [50000, 250000, 150000, 100000][techNames.indexOf(tech)];
                    output += `‚Ä¢ ${tech}: ${efficiency}% efficiency, ~${cost.toLocaleString()} CapEx<br>`;
                });
                outputDiv.innerHTML = output;
            } else {
                resultsDiv.style.display = 'none';
            }
        }
        
        function connectSystem() {
            const system = document.getElementById('monitoringSystem').value;
            if (system) {
                alert(`Connecting to ${system}... (Demo: Connection would be established in real application)`);
            } else {
                alert('Please select a monitoring system first.');
            }
        }
        
        function bookConsultation() {
            showConciergeResponse('Consultation booking request submitted. An expert will contact you within 24 hours.');
        }
        
        function regulatoryHelp() {
            showConciergeResponse('Regulatory assistance request submitted. Our compliance team will reach out soon.');
        }
        
        function findFinancing() {
            showConciergeResponse('Financing inquiry submitted. We\'ll connect you with relevant funding sources.');
        }
        
        function techSuppliers() {
            showConciergeResponse('Technology supplier matching initiated. You\'ll receive a curated list soon.');
        }
        
        function showConciergeResponse(message) {
            const responseDiv = document.getElementById('conciergeResponse');
            responseDiv.innerHTML = message;
            responseDiv.style.display = 'block';
            setTimeout(() => {
                responseDiv.style.display = 'none';
            }, 3000);
        }
        
        function exportPDF() {
            showExportStatus('PDF report generated successfully!');
        }
        
        function emailResults() {
            showExportStatus('Results emailed to your registered address!');
        }
        
        function saveProject() {
            showExportStatus('Project saved to your dashboard!');
        }
        
        function shareLink() {
            showExportStatus('Shareable link copied to clipboard!');
        }
        
        function showExportStatus(message) {
            const statusDiv = document.getElementById('exportStatus');
            statusDiv.innerHTML = message;
            statusDiv.style.display = 'block';
            setTimeout(() => {
                statusDiv.style.display = 'none';
            }, 2000);
        }
        
